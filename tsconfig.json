{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@components/*": ["src/renderer/components/*"],
      "@stores": ["src/stores/index.ts", "src/stores/*"],
      "@stores/*": ["src/stores/*"],
      "@services": ["src/services/index.ts", "src/services/*"],
      "@services/*": ["src/services/*"],
      "@types": ["src/types/index.ts", "src/types/*"],
      "@types/*": ["src/types/*"],
      "@utils": ["src/utils/index.ts", "src/utils/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "*.config.ts", "*.config.js"],
  "exclude": ["node_modules", "release"]
}